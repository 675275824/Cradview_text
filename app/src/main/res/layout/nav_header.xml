<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/red">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp" />
    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aunsa"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_below="@id/nav_header_image"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/nav_header_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nav_header_name"
        android:layout_below="@id/nav_header_name"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bbi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:text="警言："/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:text="物质的贪婪愈烈,精神的空虚愈重。"/>
    </LinearLayout>
</RelativeLayout>